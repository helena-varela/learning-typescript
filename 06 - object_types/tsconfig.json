{
  "compilerOptions": {
    "target": "ES2022", 
    "module": "ESNext", 
    "moduleResolution": "node",
    "outDir": "./dist", 
    "rootDir": "./",
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "verbatimModuleSyntax": false, 
    "isolatedModules": false, 
    "moduleDetection": "auto",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "sourceMap": true,
  }
}